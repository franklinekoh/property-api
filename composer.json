{
    "name": "slim/slim-skeleton",
    "description": "A Slim Framework skeleton application for rapid development",
    "keywords": [
        "microframework",
        "rest",
        "router",
        "psr7"
    ],
    "homepage": "http://github.com/slimphp/Slim-Skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Josh Lockhart",
            "email": "info@joshlockhart.com",
            "homepage": "http://www.joshlockhart.com/"
        },
        {
            "name": "Pierre Berube",
            "email": "pierre@lgse.com",
            "homepage": "http://www.lgse.com/"
        },
        {
            "name": "Ekoh Franklin",
            "email": "ekohfranklin@gmail.com",
            "homepage": "https://github.com/franklinekoh"
        }
    ],
    "require": {
        "php": ">=7.0",
        "slim/slim": "^3.9",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.23",
        "illuminate/database": "^5.5",
        "vlucas/phpdotenv": "^2.4",
        "respect/validation": "^1.1",
        "league/fractal": "^0.17.0",
        "league/container": "2.x",
        "slim/psr7": "^0.6.0",
        "symfony/console": "^5.0",
        "guzzlehttp/guzzle": "~6.0",
        "tuupola/cors-middleware": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4"
    },
    "autoload": {
      "psr-4": {
          "App\\": "src/App"
      }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0,
        "php": "5.6"
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env'); \""
        ],
        "start": "php -S localhost:7000 -t public public/index.php",
        "fetch-data": "php cli.php app:sync-properties",
        "test": "phpunit"
    }

}
